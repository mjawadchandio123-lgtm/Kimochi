NODE_ENV=development

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token
BOT_PREFIX=!

# Steam API
STEAM_API_KEY=your_steam_api_key
STEAM_SHARED_SECRET=your_shared_secret
STEAM_IDENTITY_SECRET=your_identity_secret
STEAM_ACCOUNT_NAME=your_account_name
STEAM_PASSWORD=your_account_password

# Database
MONGODB_URI=mongodb://localhost:27017/tf2-bot
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Binance API
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET=false

# Admin Panel
ADMIN_PORT=3000
ADMIN_SECRET_KEY=your_super_secret_key_for_jwt
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Crypto Settings
SUPPORTED_CRYPTOCURRENCIES=BTC,ETH,USDT,USDC,BNB
DEFAULT_CURRENCY=USD

# Trading Settings
TF2_KEY_STOCK=1000
MIN_WITHDRAWAL_AMOUNT=10
MAX_WITHDRAWAL_AMOUNT=10000
WITHDRAWAL_FEE_PERCENT=1.5

# Security
ENABLE_SCAM_PROTECTION=true
REQUIRE_EMAIL_VERIFICATION=true
MAX_LOGIN_ATTEMPTS=5

# Logging
LOG_LEVEL=debug
LOG_PATH=./logs

# Supported Languages
SUPPORTED_LANGUAGES=en,es,zh,sr,de
